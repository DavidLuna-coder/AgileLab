<MudContainer Fixed MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-12">
	<MudGrid Spacing="10">
		<MudItem Class="mb-4" xs="9">
			<MudText Typo="Typo.h3">@Title</MudText>
		</MudItem>
		<MudItem xs="3">
			@Actions
		</MudItem>
		<MudItem xs="12">
			@ChildContent
		</MudItem>
	</MudGrid>
</MudContainer>

@code {
	[Parameter]
	public string Title { get; set; } = string.Empty;

	[Parameter]
	public RenderFragment ChildContent { get; set; }
	[Parameter]
	public RenderFragment Actions { get; set; }
}
